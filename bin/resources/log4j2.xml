<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="ERROR">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%7pid] %-5p --- myapp%-42.42c{1.} : %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="TRACE">          
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
